<?xml version="1.0" encoding="UTF-8"?>

<root>
	<!-- LIBS -->
	<libraries>
		<library id="craftingWindow"/>
		<library id="module_equipment_lib"/>
		<library id="gameclientCommonUI"/>
	</libraries>
	<!-- TEXT STYLES -->

	<textstyle name="assembly_timer_details"
			   bold="true"
			   textColor="0x65e0ff"
			   type="dynamic"
			   align="left"
			   fontSize="8"
			   wordWrap="true"
			   multiline="true"
			   embedFonts="false"
			   fontName="Verdana"
			   autoSize="center"/>
	<textstyle name="assembly_combobox_filter"
			   type="dynamic"
			   selectable="false"
			   fontName="Verdana"
			   embedFonts="false"
			   autoSize="left"
			   align="left"
			   textColor="0xC2BDC3"
			   fontSize="10"/>
	<textstyle name="equipment_combobox_inventory_filter"
			   type="dynamic"
			   selectable="false"
			   fontName="Verdana"
			   embedFonts="false"
			   autoSize="left"
			   align="left"
			   textColor="0xC2BDC3"
			   fontSize="10"/>
	<textstyle name="equipment_checkbox_inventory_filter"
			   type="dynamic"
			   align="left"
			   autoSize="left"
			   wordWrap="false"
			   selectable="false"
			   fontName="Verdana"
			   embedFonts="false"
			   textColor="0x6A7275"
			   fontSize="10"/>
	<textstyle name="assembly_label_filter"
			   background="false"
			   textColor="0xBFBFBF"
			   type="dynamic"
			   selectable="false"
			   fontName="Verdana"
			   embedFonts="false"
			   fontSize="10"/>
	<textstyle name="assembly_warning"
			   textColor="0xffcc00"
			   type="dynamic"
			   fontSize="12"
			   align="center"
			   wordWrap="true"
			   multiline="true"
			   embedFonts="false"
			   fontName="Verdana"
			   autoSize="center"/>
	<textstyle name="assembly_detail_headline"
			   textColor="0xededed"
			   type="dynamic"
			   fontSize="12"
			   bold="true"
			   wordWrap="false"
			   multiline="false"
			   embedFonts="false"
			   fontName="Verdana"
			   marginLeft="15"
			   autoSize="left"/>

	<skin name="assembly_itemlist_new" classname="BasicSkin">
		<layer classname="FilledBoxLayer" lineColor="0x32e629" fillAlpha="0" lineAlpha="1">normal</layer>
	</skin>
	<skin name="assembly_itemlist_building" classname="BasicSkin" library="craftingWindow">
		<layer classname="BitmapLayer" libraryID="icon_cogs">normal</layer>
	</skin>
	<skin name="assembly_itemlist_time" classname="BasicSkin" library="craftingWindow">
		<layer classname="BitmapLayer" libraryID="indicator_time">normal</layer>
	</skin>
	<skin name="assembly_details_timer" classname="BasicSkin" library="craftingWindow">
		<layer classname="BitmapLayer" libraryID="icon_time">normal</layer>
	</skin>
	<skin name="assembly_itemlist_multibuild" classname="BasicSkin" library="craftingWindow">
		<layer classname="BitmapLayer" libraryID="indicator_more">normal</layer>
	</skin>
	<skin name="assembly_scrollcontainer" classname="FadableButtonSkin">
		<layer classname="FilledBoxLayer" fillColor="0x13323E" fillAlpha="0">mask</layer>
	</skin>
	<skin name="details_bg" classname="BasicSkin" library="craftingWindow">
		<layer classname="BitmapLayer" libraryID="frame_top">normal</layer>
	</skin>
	<skin name="assebly_label_default" classname="LabelSkin"/>

	<!-- Filter combobox -->

	<skin name="equipment_combobox_filter" library="module_equipment_lib" classname="FadableButtonSkin">
		<layer classname="BitmapLayer" scale9grid="4,3,17,16" libraryID="equipment_combobox_filter_normal">normal
		</layer>
		<layer classname="BitmapLayer" scale9grid="4,3,17,16" libraryID="equipment_combobox_filter_hover">over</layer>
		<layer classname="BitmapLayer" scale9grid="4,3,17,16" libraryID="equipment_combobox_filter_active">clicked
		</layer>
	</skin>
	<skin name="equipment_button_close_inventory_filter_popup" library="module_equipment_lib"
		  classname="FadableButtonSkin">
		<layer classname="BitmapLayer" libraryID="equipment_inventoryfilter_close_button_normal">normal</layer>
		<layer classname="BitmapLayer" libraryID="equipment_inventoryfilter_close_button_rollover">over</layer>
		<layer classname="BitmapLayer" libraryID="equipment_inventoryfilter_close_button_click">clicked</layer>
	</skin>
	<skin name="assembly_progress" classname="FadableButtonSkin" library="craftingWindow">
		<layer classname="BitmapLayer" libraryID="btn_progress_normal">normal</layer>
		<layer classname="BitmapLayer" libraryID="btn_progress_hover">over</layer>
		<layer classname="BitmapLayer" libraryID="btn_progress_active">clicked</layer>
	</skin>

	<template name="assembly_build">

		<container name="build"
				   width="160"
				   height="90">

			<spinbox name="spinBox"
					 alignX="center"
					 alignY="top"
					 marginTop="2"
					 marginRight="25"
					 type="horizontal"
					 width="90"
					 height="16"
					 templateName="commonui.spinbox.horizontal.mathsymbols"/>

			<label text="localize:assembly_label_time_to_build"
			       autoSizeWidth="true" autoWidthMode="parent"
				   alignY="top"
				   marginTop="22"
				   registeredTextStyleName="crafting_timer_left"/>

			<label name="label"
			       autoSizeWidth="true" autoWidthMode="parent"
				   alignX="right"
				   alignY="top"
				   marginTop="22"
				   registeredTextStyleName="crafting_timer_right"/>

			<label text="localize:assembly_label_crafting_limit"
			       autoSizeWidth="true" autoWidthMode="parent"
				   alignY="top"
				   marginTop="37"
				   registeredTextStyleName="crafting_timer_left"/>

			<label name="limit"
			       autoSizeWidth="true" autoWidthMode="parent"
				   alignX="right"
				   alignY="top"
				   marginTop="37"
				   registeredTextStyleName="crafting_timer_right"/>

			<button name="btn"
					width="140"
					height="25"
					alignX="center"
					alignY="bottom"
					marginBottom="1"
					textMarginY="1"
					text="localize:crafting_upgrade_button_ready"
					registeredSkinName="commonui_scale9_button_blue"/>

		</container>

	</template>
	<template name="assembly_collect">

		<container name="collect"
				   width="160"
				   height="100">

			<label width="140"
				   name="label"
				   alignX="center"
				   alignY="top"
				   registeredTextStyleName="crafting_default"/>

			<button name="btn"
					alignX="center"
					alignY="bottom"
					width="140"
					height="25"
					marginBottom="11"
					textMarginY="1"
					text="localize:assembly_button_collect"
					registeredSkinName="commonui_scale9_button_blue"/>

		</container>

	</template>
	<template name="assembly_building">

		<container name="building" width="160" height="100">

			<label autoSizeWidth="true" autoWidthMode="parent"
				   name="label"
				   alignY="top"
				   useHTML="true"
				   registeredTextStyleName="crafting_default"/>

			<progressbar name="progressbar"
						 marginLeft="10"
						 marginRight="10"
						 alignY="center"
						 height="9"
						 autoSizeWidth="true"
						 registeredSkinName="crafting_window_progressbar_building_skin"/>

			<label name="time"
				   y="55"
				   autoSizeWidth="true" autoWidthMode="parent"
				   registeredTextStyleName="crafting_timer"/>

		</container>

	</template>
	<template name="assembly_not_possible">

		<container name="not_possible"
				   width="160"
				   height="100">

			<coreponent name="img"
						alignY="center"
						alignX="center"
						registeredSkinName="crafting_not_possible"/>

			<label name="label"
				   alignY="center"
				   alignX="center"
				   autoSizeWidth="true" autoWidthMode="parent"
				   autoSizeTextHeight="true"
				   registeredTextStyleName="crafting_default"/>

		</container>

	</template>
	<template name="assembly_warning">

		<container visible="false"
				   name="assembly_warning"
				   width="530"
				   height="400">

			<coreponent name="img"
						alignY="center"
						alignX="center"
						registeredSkinName="crafting_not_possible"/>

			<label name="label"
				   marginLeft="20"
				   alignY="center"
				   alignX="center"
				   width="530"
				   autoSizeTextHeight="true"
				   registeredTextStyleName="assembly_warning"/>

		</container>

	</template>
	<template name="equipment_template_inventory.filterset.row">
		<root>
			<container name="row"
					   autoSizeWidth="true"
					   marginLeft="5"
					   marginRight="5"
					   height="16">

				<checkbox name="cb.filter.left"
						  registeredSkinName="commonui_checkbox16x16_blue"/>

				<label name="label.filter.left"
					   height="14"
					   registeredTextStyleName="equipment_checkbox_inventory_filter"
					   text="localize:equipment_inventory_popup.filtering_label_showall:eic"
					   autoSizeTextWidth="true"/>

				<checkbox name="cb.filter.right"
						  registeredSkinName="commonui_checkbox16x16_blue"/>

				<label name="label.filter.right"
					   height="14"
					   autoSizeTextWidth="true"
					   registeredTextStyleName="equipment_checkbox_inventory_filter"
					   text="localize:equipment_inventory_popup.filtering_label_showall:eic"/>

			</container>
		</root>
	</template>

	<!-- CONTENT -->
	<container name="globalContainer"
			   width="530"
			   height="430">

		<reference name="assembly_warning"
				   template="assembly_warning"/>

		<container name="contentContainer"
				   mouseEnabled="false"
				   layout="vertical"
				   width="530"
				   height="430">

			<container name="filterComboboxContainer"
					   width="140"
					   height="21"
					   mouseEnabled="false"
					   marginRight="28">

				<checkbox name="progressButton"
						  width="19"
						  height="17"
						  marginLeft="21"
						  alignX="left"
						  alignY="center"
						  registeredSkinName="assembly_progress"/>

				<ComboBox name="combobox.filters"
						  width="98"
						  height="17"
						  alignX="right"
						  alignY="bottom"
						  marginRight="20"
						  marginBottom="1"
						  registeredSkinName="crafting_combobox_filter"
						  popupTemplate="crafting_template_inventory_filter_popup"/>

				<label name="label.combobox.filters"
					   alignY="bottom"
					   alignX="right"
					   width="98"
					   height="17"
					   marginBottom="2"
					   marginRight="18"
					   registeredTextStyleName="assembly_label_filter"
					   text="localize:assembly_label_filter"/>

				<container name="arrowContainer"
						   alignY="bottom"
						   alignX="right"
						   width="10"
						   height="10"
						   marginBottom="0"
						   marginRight="26"
						   rotation="180">

					<container name="arrowRotationContainer"
							   rotation="180">

						<bitmap x="-5" y="-5" library="module_equipment_lib" libraryID="equipment_arrow_down_active"/>
						<bitmap x="-5" y="-5" library="module_equipment_lib" libraryID="equipment_arrow_down_hover"/>
						<bitmap x="-5" y="-5" library="module_equipment_lib" libraryID="equipment_arrow_down_normal"/>

					</container>
				</container>
			</container>

			<coreponent name="firstDivider"
						marginTop="2"
						marginLeft="20"
						width="468"
						marginRight="20"
						registeredSkinName="crafting_divider"/>

			<container name="itemListContainer"
					   mouseEnabled="false"
					   marginLeft="18"
					   width="469"
					   height="43">

				<coreponent registeredSkinName="crafting_recipe_list_skin"
							width="434"
							height="39"
							marginTop="3"
							marginLeft="15"/>

				<itemlist name="recipes"
						  width="430"
						  itemGap="0"
						  height="35"
						  marginLeft="18"
						  marginTop="6"
						  mouseChildren="true"
						  mouseEnabled="true"
						  autoSizeWidth="false"
						  layout="horizontal"
						  cacheSkinMaskAsBitmap="false"
						  registeredSkinName="commonui_list_mask">

					<itemrenderer width="33"
								  autoSizeWidth="false"
								  height="35"
								  mouseEnabled="true"
								  mouseChildren="true">

						<coreponent name="hitlayer"
									alpha="0"
									registeredSkinName="commonui_hitlayer"
									mouseEnabled="true"
									mouseChildren="true"
									autoSizeWidth="true"
									autoSizeHeight="true"
									tooltipTemplateID="commonui_tooltip_simple"/>

						<coreponent name="pic"
									width="30"
									height="30"
									alignX="center"
									alignY="center"/>

						<coreponent registeredSkinName="assembly_itemlist_time"
									name="timed"
									marginLeft="2.5"
									width="10"
									height="10"
									alignY="center"
									alignX="left"/>

						<coreponent registeredSkinName="assembly_itemlist_building"
									name="building"
									width="33"
									height="26"
									alignX="center"
									alignY="center"/>

						<coreponent registeredSkinName="crafing_itemlist_collect"
									name="collect"
									width="26"
									height="23"
									alignX="center"
									alignY="center"/>

						<coreponent registeredSkinName="assembly_itemlist_multibuild"
									name="multibuild"
									marginTop="5"
									marginLeft="5"
									width="5"
									height="5"/>

						<coreponent registeredSkinName="crafting_itemlist_crafable"
									name="craftable"
									width="30"
									height="30"
									alignX="center"
									alignY="center"/>

						<coreponent name="isNew"
									width="30"
									height="30"
									alignX="center"
									alignY="center"
									registeredSkinName="assembly_itemlist_new"/>

						<progressbar name="progress"
									 height="5"
									 width="28"
									 marginBottom="3"
									 alignY="bottom"
									 alignX="center"
									 registeredSkinName="crafting_assembly_window_progressbar_skin"/>

						<progressbar name="progress_timer"
									 height="5"
									 width="28"
									 marginBottom="3"
									 alignY="bottom"
									 alignX="center"
									 registeredSkinName="crafting_timed_progressbar_skin"/>

						<button name="hover"
								width="30"
								height="30"
								alignX="center"
								alignY="center"
								registeredSkinName="crafting_itemlist_green"/>

					</itemrenderer>
				</itemlist>

				<button name="left"
						width="13"
						height="24"
						alignY="top"
						alignX="left"
						marginTop="11"
						marginLeft="1"
						registeredSkinName="commonui_arrow_button_left"/>

				<button name="right"
						width="13"
						height="24"
						alignY="top"
						alignX="right"
						marginTop="11"
						marginRight="6"
						registeredSkinName="commonui_arrow_button_right"/>

			</container>

			<coreponent name="secondDivider"
						height="2"
						marginLeft="20"
						width="468"
						registeredSkinName="crafting_divider"/>

			<container name="detailsContainer"
					   marginLeft="20"
					   marginTop="10"
					   mouseChildren="true"
					   mouseEnabled="false"
					   height="137"
					   width="470"
					   registeredSkinName="details_bg">

				<videoplayer marginLeft="3"
							 name="vid"
							 width="130"
							 height="130"
							 alignX="left"
							 alignY="center"/>

				<label name="headline"
					   registeredSkinName="marquee_texfield_skin"
					   registeredTextStyleName="assembly_detail_headline"
					   height="30"
					   width="315"
					   marginLeft="155"/>

				<coreponent name="icon"
							marginLeft="15"
							marginTop="5"
							registeredSkinName="assembly_details_timer"
							mouseEnabled="true"
							alignX="left"
							alignY="top"
							tooltipData="localize:assembly_item_timer_ttip"
							tooltipTemplateID="commonui_tooltip_simple"/>

				<label name="time"
					   marginLeft="30"
					   marginTop="0"
					   width="100"
					   height="100"
					   alignX="left"
					   alignY="top"
					   mouseEnabled="true"
					   useHTML="true"
					   tooltipData="localize:assembly_item_timer_ttip"
					   registeredTextStyleName="assembly_timer_details"
					   tooltipTemplateID="commonui_tooltip_simple"/>

				<container
						marginTop="30"
						name="textContainer"
						alignX="left"
						mouseEnabled="false"
						height="108"
						width="470">

					<scrollcontainer mouseEnabled="true"
									 alignY="center"
									 name="assemblyScrollContainerText"
									 height="105"
									 autoSizeHeight="false"
									 width="280"
									 marginLeft="170"
									 registeredSkinName="assembly_scrollcontainer">

						<label name="content"
							   width="280"
							   useHTML="true"
							   mouseEnabled="true"
							   registeredTextStyleName="crafting_default"
							   autoSizeTextHeight="true"/>

					</scrollcontainer>

					<scrollbar name="assemblyScrollbarText"
							   width="4"
							   autoSizeHeight="true"
							   alignX="right"
							   marginRight="6"
							   marginBottom="6"
							   registeredSkinName="commonui_scrollbar_bgnd_dark">

						<button name="buttonSlider"
								width="4"
								height="6"
								alignX="center"
								registeredSkinName="commonui_scrollbar_slider"/>

					</scrollbar>

					<bind source="assemblyScrollbarText"
						  target="assemblyScrollContainerText"
						  type="scrollcontainer"/>

				</container>

			</container>

			<container name="buildContainer"
					   marginTop="21"
					   marginLeft="18"
					   mouseEnabled="false"
					   height="141"
					   width="510">

				<itemlist name="ingredients_container"
						  autoSizeHeight="false"
						  width="300"
						  height="141"
						  marginLeft="3"
						  itemGap="5"
						  mouseEnabled="false"
						  cacheSkinMaskAsBitmap="false"
						  registeredSkinName="commonui_list_mask">

					<itemrenderer height="42"
								  autoSizeWidth="true"
								  autoSizeHeight="false"
								  mouseEnabled="true"
								  mouseChildren="true">

						<container name="content"
								   mouseEnabled="false"
								   height="42"
								   alignY="center"
								   width="260">

							<coreponent name="ingredientListBg"
										autoSizeWidth="true"
										height="42"
										registeredSkinName="crafting_vertical_list_bg_skin"/>

							<coreponent name="img"
										marginTop="6"
										marginLeft="6"
										width="32"
										height="32"
										alignX="left"/>

							<coreponent registeredSkinName="crafting_ingridient_outline"
										width="31"
										height="31"
										marginTop="5"
										marginLeft="5"
										alignX="left"/>

							<label height="10"
								   name="item_name"
								   alignX="left"
								   alignY="top"
								   marginTop="1"
								   marginLeft="43"
								   registeredTextStyleName="crafting_ingredients_item_name"/>

							<label height="15"
								   name="owned_amount"
								   alignX="left"
								   alignY="bottom"
								   width="160"
								   marginBottom="14"
								   marginLeft="43"
								   useHTML="true"
								   registeredSkinName="crafting_label_truncate"
								   registeredTextStyleName="crafting_ingredients"/>

							<label height="15"
								   name="amount"
								   alignX="left"
								   alignY="bottom"
								   width="160"
								   marginBottom="2"
								   marginLeft="43"
								   registeredSkinName="crafting_label_truncate"
								   registeredTextStyleName="crafting_ingredients"/>

							<button name="help"
									alignX="right"
									alignY="top"
									marginTop="11"
									marginRight="1"
									tooltipTemplateID="commonui_tooltip_html_text"
									registeredSkinName="commonui_info_button"/>

							<button name="shop"
									visible="false"
									alignX="right"
									alignY="top"
									marginTop="7"
									marginRight="2"
									registeredSkinName="crafting_shop"
									tooltipData="localize:assembly_item_tooltip_shop"/>

						</container>

					</itemrenderer>

				</itemlist>

				<scrollbar name="ingredients_bar"
						   width="6"
						   height="135"
						   x="265"
						   alignY="top"
						   registeredSkinName="commonui_scrollbar_bgnd_dark">

					<button name="buttonSlider"
							width="4"
							height="6"
							alignX="center"
							registeredSkinName="commonui_scrollbar_slider"/>

				</scrollbar>

				<bind source="ingredients_bar"
					  target="ingredients_container"
					  type="scrollcontainer"/>

				<container name="actions"
						   mouseEnabled="true"
						   height="100"
						   width="160"
						   marginRight="40"
						   alignX="right">

					<reference name="build" template="assembly_build"/>
					<reference name="collect" template="assembly_collect"/>
					<reference name="building" template="assembly_building"/>
					<reference name="not_possible" template="assembly_not_possible"/>

				</container>
			</container>

		</container>
	</container>
</root>