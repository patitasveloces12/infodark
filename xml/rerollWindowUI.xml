<?xml version="1.0" encoding="UTF-8"?>

<root>
    <!-- LIBS -->
    <libraries>
        <library id="module_equipment_lib"/>
        <library id="gameclientCommonUI"/>
    </libraries>

    <textstyle name="reroll_header_font"
               textColor="0xededed"
               type="dynamic"
               fontSize="12"
               bold="true"
               wordWrap="true"
               multiline="false"
               embedFonts="false"
               fontName="Verdana"
               autoSize="left"
               glowFilter='{"color":"0x000000", "blurX":"2", "blurY":"2", "strength":"10", "quality":"2"}'/>

    <textstyle name="reroll_item_desc"
               textColor="0xededed"
               type="dynamic"
               fontSize="10"
               wordWrap="true"
               multiline="true"
               embedFonts="false"
               fontName="Verdana"
               autoSize="left"/>

    <textstyle name="reroll_grid_item_desc"
               textColor="0xededed"
               type="dynamic"
               fontSize="8"
               wordWrap="true"
               multiline="true"
               embedFonts="false"
               fontName="Verdana"
               autoSize="left"/>

    <textstyle name="reroll_item_amnt"
               textColor="0x3587a2"
               type="dynamic"
               fontSize="14"
               wordWrap="true"
               multiline="true"
               embedFonts="false"
               fontName="Verdana"
               autoSize="left"/>

    <textstyle name="reroll_item_name"
               textColor="0xededed"
               bold="true"
               type="dynamic"
               fontSize="10"
               wordWrap="false"
               multiline="false"
               embedFonts="false"
               fontName="Verdana"
               autoSize="left"/>

    <textstyle name="reroll_item_desc_red"
               textColor="0xee0000"
               type="dynamic"
               fontSize="12"
               wordWrap="true"
               multiline="true"
               embedFonts="false"
               fontName="Verdana"
               autoSize="left"/>

    <textstyle name="reroll_item_desc_green"
               textColor="0x00ee00"
               type="dynamic"
               fontSize="12"
               wordWrap="true"
               multiline="true"
               embedFonts="false"
               fontName="Verdana"
               autoSize="left"/>

    <skin name="crafting_vertical_list_bg_skin_orange" classname="BasicSkin">
        <layer classname="FilledBoxLayer" fillColor="0xdbc13b" fillAlpha="0.6">normal</layer>
    </skin>

    <skin name="retain_cost_ttip_frame" library="traininggroundsUI" classname="BasicSkin">
        <layer classname="BitmapLayer" scale9grid="1,1,2,2" libraryID="ttip_frame">normal</layer>
    </skin>
    <!-- TEMPLATES -->
    <template name="reroll_filter_template">
        <container name="itemGridContainer"
                   mouseEnabled="false"
                   layout="vertical"
                   width="469">
            <coreponent registeredSkinName="crafting_divider"
                        marginTop="2"
                        marginLeft="20"
                        width="468"
                        height="2"/>
            <container name="itemListContainer"
                       mouseEnabled="false"
                       marginLeft="18"
                       width="469"
                       height="43">

                <coreponent registeredSkinName="crafting_recipe_list_skin"
                            width="434"
                            height="39"
                            marginTop="3"
                            marginLeft="15"/>

                <itemlist name="rerollTargetTypeList"
                          width="430"
                          itemGap="0"
                          height="35"
                          marginLeft="18"
                          marginTop="6"
                          mouseChildren="true"
                          mouseEnabled="true"
                          autoSizeWidth="false"
                          layout="horizontal"
                          cacheSkinMaskAsBitmap="false"
                          registeredSkinName="commonui_list_mask">

                    <itemrenderer width="33"
                                  height="35"
                                  autoSizeWidth="false"
                                  mouseEnabled="true"
                                  mouseChildren="true">

                        <coreponent name="hitlayer"
                                    registeredSkinName="commonui_hitlayer"
                                    mouseEnabled="true"
                                    mouseChildren="true"
                                    autoSizeWidth="true"
                                    autoSizeHeight="true"
                                    alpha="0"
                                    tooltipTemplateID="commonui_tooltip_simple"/>

                        <coreponent name="pic"
                                    width="31"
                                    height="31"
                                    alignX="center"
                                    alignY="center"/>

                        <button name="hover"
                                width="30"
                                height="30"
                                alignX="center"
                                alignY="center"
                                registeredSkinName="crafting_itemlist_green"/>
                    </itemrenderer>

                </itemlist>

            </container>
            <coreponent registeredSkinName="crafting_divider"
                        marginLeft="20"
                        width="468"
                        height="2"/>
        </container>
    </template>

    <template name="reroll_panel_template">
        <container name="rerollItemGridContainer"
                   mouseEnabled="false"
                   marginLeft="20"
                   marginTop="70"
                   width="469">

            <coreponent name="rerollGridBg"
                        width="466"
                        height="106"
                        mouseEnabled="true"
                        mouseChildren="true"
                        registeredSkinName="upgrade_grid_bg"/>

            <Grid name="rerollItemsGrid"
                  marginLeft="18"
                  marginTop="25"
                  itemGapX="6"
                  itemGapY="3"
                  width="430"
                  height="74"
                  cacheSkinMaskAsBitmap="false"
                  registeredSkinName="commonui_list_mask">

                <itemrenderer width="37"
                              height="74"
                              itemGap="0"
                              autoSizeWidth="false"
                              mouseEnabled="true"
                              mouseChildren="true">

                    <coreponent name="hitlayer"
                                registeredSkinName="commonui_hitlayer"
                                mouseEnabled="true"
                                mouseChildren="true"
                                autoSizeWidth="true"
                                autoSizeHeight="true"
                                alpha="0"
                                tooltipTemplateID="commonui_tooltip_simple"/>

                    <coreponent name="pic"
                                width="30"
                                height="30"
                                alignX="center"
                                alignY="top"/>

                    <button name="hover"
                            width="30"
                            height="30"
                            alignX="center"
                            alignY="top"
                            registeredSkinName="crafting_itemlist_green"/>

                    <label name="itemName"
                           marginTop="30"
                           width="32"
                           text="0"
                           alignX="center"
                           alignY="top"
                           registeredTextStyleName="reroll_grid_item_desc"/>

                </itemrenderer>

            </Grid>

            <scrollbar name="item_grid"
                       height="74"
                       width="6"
                       autoSizeWidth="false"
                       direction="vertical"
                       scrollSpeed="3"
                       alignX="right"
                       marginRight="12"
                       marginTop="24"
                       registeredSkinName="commonui_scrollbar_bgnd_dark">

                <button name="buttonSlider"
                        width="4"
                        alignX="center"
                        registeredSkinName="commonui_scrollbar_slider"/>

            </scrollbar>

            <bind source="item_grid"
                  target="rerollItemsGrid"
                  type="scrollcontainer"/>

            <label name="rowNumber" marginTop="3" width="70" text="test" alignX="right" alignY="top" registeredTextStyleName="reroll_item_desc"/>
        </container>
    </template>

    <template name="reroll_stats_template">
        <container name="rerollStatsContainer"
                   marginLeft="20"
                   marginTop="180"
                   width="469">
            <label name="stats" text="localize:reroll_stat"  width="200" registeredTextStyleName="reroll_header_font"/>
        </container>
    </template>

    <template name="reroll_stats_panel_template">
        <container name="rerollStatsGridContainer"
                   marginLeft="20"
                   marginTop="215"
                   width="469">

            <Grid name="statsGrid"
                  width="310"
                  itemGapX="3"
                  itemGapY="3"
                  height="200"
                  cacheSkinMaskAsBitmap="false"
                  registeredSkinName="commonui_list_mask">

                <itemrenderer width="150"
                              height="42"
                              autoSizeWidth="false"
                              mouseEnabled="true"
                              mouseChildren="true">

                    <coreponent name="ingredientListBg" autoSizeWidth="true" height="42" registeredSkinName="crafting_vertical_list_bg_skin"/>
                    <coreponent name="img" marginTop="6" marginLeft="6" width="32" height="32" alignX="left" alignY="center"/>
                    <coreponent registeredSkinName="crafting_ingridient_outline" width="31" height="31" marginTop="5" marginLeft="5" alignX="left" alignY="center"/>
                    <label name="item_stat_positive" marginLeft="55" marginTop="13" width="150" text="0" alignX="left" alignY="top" registeredTextStyleName="reroll_item_desc_green"/>
                    <label name="item_stat_negative" marginLeft="55" marginTop="13" width="150" text="0" alignX="left" alignY="top" registeredTextStyleName="reroll_item_desc_red"/>

                </itemrenderer>

            </Grid>

        </container>
    </template>

    <template name="reroll_ships_template">
        <container name="rerollShips"
                   marginLeft="20"
                   marginTop="335"
                   width="469">
            <label name="ships" text="localize:reroll_ships" width="200" registeredTextStyleName="reroll_header_font"/>
            <itemlist name="shipList"
                      width="150"
                      itemGap="3"
                      height="35"
                      marginTop="30"
                      mouseChildren="true"
                      mouseEnabled="true"
                      autoSizeWidth="false"
                      layout="horizontal"
                      cacheSkinMaskAsBitmap="false"
                      registeredSkinName="commonui_list_mask">

                <itemrenderer width="33"
                              height="35"
                              autoSizeWidth="false"
                              mouseEnabled="true"
                              mouseChildren="true">

                    <coreponent name="hitlayer"
                                registeredSkinName="commonui_hitlayer"
                                mouseEnabled="true"
                                mouseChildren="true"
                                autoSizeWidth="true"
                                autoSizeHeight="true"
                                alpha="0"
                                tooltipTemplateID="commonui_tooltip_simple"/>

                    <coreponent name="pic"
                                width="31"
                                height="31"
                                alignX="center"
                                alignY="center"/>

                    <coreponent registeredSkinName="crafting_ingridient_outline"
                                width="31"
                                height="31"
                                alignX="center"
                                alignY="center"/>
                </itemrenderer>
            </itemlist>
        </container>
    </template>

    <template name="reroll_cost_template">
        <container name="rerollCostsContainer"
                   marginLeft="338"
                   marginTop="180"
                   width="150">
            <label name="rerollCost" text="localize:reroll_reroll_costs" alignX="left" width="130" registeredTextStyleName="reroll_header_font"/>
            <container name="rerollInfo" width="150" marginTop="35" alignX="left" >
                <coreponent name="reollInfoBg_discount" autoSizeWidth="true" height="48" registeredSkinName="crafting_vertical_list_bg_skin_orange" visible="false"/>
                <coreponent name="reollInfoBg" autoSizeWidth="true" height="48" registeredSkinName="crafting_vertical_list_bg_skin"/>
                <coreponent name="img" marginTop="6" marginLeft="6" width="32" height="32" alignX="left" mouseEnabled="true"/>
                <coreponent registeredSkinName="crafting_ingridient_outline" width="31" height="31" marginTop="5" marginLeft="5" alignX="left"/>
                <label height="10" width="60" name="item_name" alignX="left" alignY="top" marginTop="2" marginLeft="43" text="ABR" registeredTextStyleName="reroll_item_name"/>
                <label height="20" width="60" name="item_amt" alignX="left" alignY="top" marginTop="16" marginLeft="43" text="458 / 4" registeredTextStyleName="reroll_item_desc"/>
                <button name="help" alignX="right" alignY="top" marginTop="16" marginRight="1" tooltipTemplateID="commonui_tooltip_html_text" registeredSkinName="commonui_info_button"/>
            </container>
            <container name="rerollLeft" width="150" marginTop="85" alignX="left" >
                <label name="item_left" height="10" width="130" alignX="left" alignY="top" marginLeft="0" text="xx/xx left" registeredTextStyleName="reroll_item_amnt"/>
                <button name="help" alignX="right" alignY="top" marginRight="1" tooltipData="localize:reroll_limit_ttip" tooltipTemplateID="commonui_tooltip_html_text" registeredSkinName="commonui_info_button"/>
            </container>
            <button name="rerollBtn" marginTop="110" width="150" height="25" alignX="left" textMarginY="1" text="localize:reroll_reroll_btn" registeredSkinName="commonui_scale9_button_blue"/>

            <container name="retainCost" width="150" marginTop="138" alignX="left" >
                <label name="item_left" height="10" width="130" alignX="left" alignY="top" marginLeft="0" text="localize:reroll_salvage_costs" registeredTextStyleName="reroll_item_name"/>
                <button name="help" alignX="right" alignY="top" marginRight="1" tooltipTemplateID="retain_resourceToolTip" registeredSkinName="commonui_info_button"/>
            </container>
            <label name="recycleCost" text="localize:reroll_recycle_return"  alignX="left" width="150" marginTop="160" registeredTextStyleName="reroll_header_font"/>
            <container name="recycleInfo" width="150" marginTop="182" alignX="left" >
                <coreponent name="recycleInfoBg" autoSizeWidth="true" height="48" registeredSkinName="crafting_vertical_list_bg_skin"/>
                <coreponent name="img" marginTop="6" marginLeft="6" width="32" height="32" alignX="left" mouseEnabled="true"/>
                <coreponent registeredSkinName="crafting_ingridient_outline" width="31" height="31" marginTop="5" marginLeft="5" alignX="left"/>
                <label height="10" width="100" name="item_name" alignX="left" alignY="top" marginTop="2" marginLeft="43" text="ABR" registeredTextStyleName="reroll_item_name"/>
                <label height="20" width="100" name="item_amt" alignX="left" alignY="top" marginTop="16" marginLeft="43" text="458 / 4" registeredTextStyleName="reroll_item_desc"/>
                <button name="help" alignX="right" alignY="top" marginTop="16" marginRight="1" tooltipData="localize:recycle_ttip" tooltipTemplateID="commonui_tooltip_html_text" registeredSkinName="commonui_info_button"/>
            </container>
            <button name="recycleBtn" marginTop="230" width="150" height="25" alignX="left" textMarginY="1" text="localize:reroll_recycle_btn" registeredSkinName="commonui_scale9_button_green"/>
        </container>
    </template>


    <template name="retain_resourceToolTip">
        <container name="container" width="250" autoSizeHeight="true" autoHeightMode="children">
            <container name="wrapper" width="250" registeredSkinName="retain_cost_ttip_frame" autoSizeHeight="true" marginTop="20"
                       autoHeightMode="children" layout="vertical">

                <itemlist layout="vertical" width="250" gap="0" name="list" autoSizeHeight="true" marginBottom="10"
                          autoHeightMode="children">
                    <itemrenderer height="40" marginTop="0" marginBottom="0">
                        <coreponent name="img" registeredSkinName="crafting_ingridient_outline" width="30" height="30" marginTop="10" marginLeft="10"/>
                        <coreponent registeredSkinName="crafting_ingridient_outline" width="31" height="31" marginTop="9" marginLeft="9"/>
                        <label name="item_name" width="200" alignX="left" marginLeft="50" marginTop="11"
                               height="29"
                               registeredTextStyleName="crafting_ingredients_item_name"/>
                        <label height="20" width="200" name="item_amt" alignX="left" alignY="top" marginTop="25" marginLeft="50" text="458 / 4"
                               useHTML="true" registeredTextStyleName="reroll_item_desc"/>
                    </itemrenderer>
                </itemlist>
            </container>
        </container>
    </template>
    <!-- CONTENT -->
    <container name="globalContainer" width="530" height="480">
        <container name="contentContainer"
                   mouseEnabled="false"
                   width="530"
                   height="450">
            <container name="standardViewContainer" mouseEnabled="false" width="530" height="450" visible="true">
                <reference template="reroll_filter_template"/>
                <reference template="reroll_panel_template"/>
                <reference template="reroll_stats_template"/>
                <reference template="reroll_stats_panel_template"/>
                <reference template="reroll_ships_template"/>
                <reference template="reroll_cost_template"/>
            </container>

            <container name="emptyViewContainer"
                       visible="false"
                       mouseEnabled="false"
                       width="530"
                       height="400">

                <coreponent name="img"
                            alignY="center"
                            alignX="center"
                            registeredSkinName="crafting_not_possible"/>

                <label name="label"
                       alignY="center"
                       alignX="center"
                       width="530"
                       autoSizeTextHeight="true"
                       text="localize:crafting_filter_no_items"
                       registeredTextStyleName="assembly_warning"/>

            </container>
        </container>
    </container>

</root>