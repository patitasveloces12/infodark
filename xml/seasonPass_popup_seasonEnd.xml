<?xml version="1.0" encoding="UTF-8"?>

<root>
	<!-- LIBS -->
	<libraries>
		<library id="gameclientCommonUI" />
		<library id="settingsWindowFUI" />
		<library id="seasonPass_asset"/>
	</libraries>
	<!-- TEXT STYLES -->


	<textstyle 	name           = "popup_whiteTextStyleButton"
				  textColor      = "0xFFFFFF"
				  type           = "dynamic"
				  selectable     = "false"
				  fontName       = "EurostileTHea"
				  align		   = "center"
				  fontSize	   = "16"
	/>

	<textstyle
			name="seasonpass_popup_info_textstyle"
			textColor="0x878787"
			type="dynamic"
			fontSize="10"
			autoSize="center"
			wordWrap="true"
			multiline="true"
			embedFonts="false"
			fontName="Verdana"
			align="center"
			bold="true"/>

	<textstyle
			name="seasonpass_popup_info_textstyle_small"
			textColor="0x878787"
			type="dynamic"
			fontSize="9"
			autoSize="center"
			wordWrap="true"
			multiline="true"
			embedFonts="false"
			fontName="Verdana"
			align="center"/>

	<textstyle  name="seasonpass_popup_title"
				textColor="0xfdcb33"
				type="dynamic"
				fontSize="12"
				autoSize="center"
				wordWrap="true"
				multiline="true"
				embedFonts="false"
				fontName="Verdana"
				bold="true"
				align="center"/>

	<!-- SKINS -->
	<skin name="confirmation_label_skin" classname="LabelSkin" />

	<skin name="popup_label_button_green" classname="FadableButtonSkin" library="settingsWindowFUI" >
		<layer classname="BitmapLayer" libraryID="btn_green_normal" >normal</layer>
		<layer classname="BitmapLayer" libraryID="btn_green_hover" >over</layer>
		<layer classname="BitmapLayer" libraryID="btn_inactive" >disabled</layer>
	</skin>

	<!-- CONTENT -->
	<container
			name="contentContainer"
			mouseEnabled="false"
			width="500"
			height="300">

		<label  name="header"
				marginTop="20"
				autoSizeWidth="true"
				localizedText="sp_season-has-ended_header"
				alignX="left"
				useHTML="true"
				height="15"
				registeredSkinName="confirmation_label_skin"
				registeredTextStyleName="seasonpass_popup_info_textstyle" />

		<label  name="seasonTitle"
				marginTop="35"
				autoSizeWidth="true"
				alignX="left"
				useHTML="true"
				height="15"
				registeredSkinName="confirmation_label_skin"
				registeredTextStyleName="seasonpass_popup_title" />

		<container  name="description"
					width="400" height="70"
					marginTop="70" alignX="center">
			<label  name="label"
					localizedText="sp_season-has-ended_description"
					autoSizeWidth="true"
					alignY="center"
					useHTML="true"
					height="15"
					registeredSkinName="confirmation_label_skin"
					autoSizeTextHeight="true"
					registeredTextStyleName="seasonpass_popup_info_textstyle_small" />
		</container>


		<coreponent name="banner"
					width="400" height="85" autoSizeWidth="false" autoSizeHeight="false"
					alignX="center" marginTop="160"/>

		<button name="okButton" width="100" height="30" marginTop="270" alignX="center" text="localize:btn_ok" registeredSkinName="popup_label_button_green" registeredTextStyleName="commonui_button_whitetxt_16pt"/>

	</container>
	<!-- CONTENT -->
</root>