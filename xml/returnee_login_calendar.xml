<?xml version="1.0" encoding="UTF-8"?>

<root>
	<!-- LIBS -->
	<libraries>
		<library id="gameclientCommonUI"/>
		<library id="returneelogin"/>
	</libraries>

	<!-- TEXT STYLES -->
	<textstyle name="calendar_info"
			   textColor="0xededed"
			   type="dynamic"
			   fontSize="12"
			   wordWrap="true"
			   multiline="true"
			   embedFonts="false"
			   fontName="Verdana"
			   bold="false"
			   align="center"
			   autoSize="center"/>

	<textstyle name="calendar"
			   textColor="0xededed"
			   type="dynamic"
			   fontSize="10"
			   wordWrap="true"
			   multiline="true"
			   embedFonts="false"
			   fontName="Verdana"
			   bold="false"
			   align="left"
			   autoSize="right"/>

	<textstyle name="calendar_center"
			   textColor="0xededed"
			   type="dynamic"
			   fontSize="10"
			   wordWrap="true"
			   multiline="true"
			   embedFonts="false"
			   fontName="Verdana"
			   bold="false"
			   align="center"
			   autoSize="center"/>

	<textstyle name="calendar_timer_label"
			   textColor="0xededed"
			   type="dynamic"
			   fontSize="12"
			   wordWrap="false"
			   multiline="false"
			   embedFonts="false"
			   fontName="Verdana"
			   bold="false"
			   align="right"
			   autoSize="right"/>

	<textstyle name="calendar_timer"
			   textColor="0xffcc00"
			   type="dynamic"
			   fontSize="12"
			   wordWrap="true"
			   multiline="true"
			   embedFonts="false"
			   fontName="Verdana"
			   bold="true"
			   align="left"
			   autoSize="right"/>

	<!-- SKINS -->
	<skin name="calendar_bg" classname="FadableButtonSkin" library="returneelogin">
		<layer classname="BitmapLayer" libraryID="rewardbg_blue">normal</layer>
		<layer classname="BitmapLayer" libraryID="rewardbg_yellow">over</layer>
		<layer classname="BitmapLayer" libraryID="rewardbg_large">clicked</layer>
	</skin>

	<skin name="calendar_last_bg" classname="FadableButtonSkin" library="returneelogin">
		<layer classname="BitmapLayer" libraryID="rewardbg_large">normal</layer>
	</skin>

	<skin name="calendar_checkmark" classname="FadableButtonSkin" library="returneelogin">
		<layer classname="BitmapLayer" libraryID="reward_checkmark">normal</layer>
	</skin>

	<!-- TEMPLATES -->
	<template name="RETURNEE_LOGIN_CALENDAR">
		<container name="calendar"
				   width="570" height="370" autoSizeWidth="false" autoSizeHeight="false"
				   marginTop="40"
				   alignX="center">

			<label text="localize:returnee_login_daily_login_info"
				   height="30" autoSizeWidth="true" autoSizeHeight="false"
				   registeredTextStyleName="calendar_info" registeredSkinName="commonui_default_label" />

			<itemlist name="calendar_list"
					  width="550" height="250" autoSizeWidth="false" autoSizeHeight="false"
					  marginTop="45" layout="grid" itemGap="10"
					  mouseEnabled="true" mouseChildren="true"
					  cacheSkinMaskAsBitmap="false" registeredSkinName="commonui_list_mask">

				<itemrenderer width="70" height="120" autoSizeWidth="false" autoSizeHeight="false"
							  mouseEnabled="true" mouseChildren="true">

					<button name="bg"
							width="70" height="120" autoSizeWidth="false" autoSizeHeight="false"
							alignX="center" alignY="center"
							registeredSkinName="calendar_bg"/>

					<label name="day"
						   width="50" height="15" autoSizeWidth="false" autoSizeHeight="false"
						   marginTop="10" marginLeft="5" alignX="left"
						   registeredTextStyleName="calendar" registeredSkinName="commonui_default_label"/>

					<coreponent name="icon"
								width="50" height="50" autoSizeWidth="false" autoSizeHeight="false"
								alignX="center" alignY="center"/>

					<label name="amount"
						   width="50" height="15" autoSizeWidth="false" autoSizeHeight="false"
						   marginBottom="10" marginLeft="5" alignX="left" alignY="bottom"
						   registeredTextStyleName="calendar" registeredSkinName="commonui_default_label"/>

					<coreponent name="checkmark"
								width="50" height="50" autoSizeWidth="false" autoSizeHeight="false"
								marginLeft="10"
								alightX="center" alignY="center" visible="false"
								registeredSkinName="calendar_checkmark"/>
				</itemrenderer>
			</itemlist>

			<container name="bottom"
					   width="500" height="65" autoSizeWidth="false" autoSizeHeight="false"
					   alignX="center" alignY="bottom">

				<label name="countdown_label" text="localize:miniclient_reward_calendar_end"
					   width="245" height="15" autoSizeWidth="false" autoSizeHeight="false"
					   alignX="left"
					   registeredTextStyleName="calendar_timer_label" registeredSkinName="commonui_default_label"/>

				<label name="countdown_timer" text="21d 02h 02m"
					   width="245" height="15" autoSizeWidth="false" autoSizeHeight="false"
					   alignX="right"
					   registeredTextStyleName="calendar_timer" registeredSkinName="commonui_default_label"/>

				<button name="claim_btn"
						text="localize:miniclient_reward_btn_claim" textMarginY="1"
						width="180" height="40" autoSizeWidth="false" autoSizeHeight="false"
						alignX="center" alignY="bottom"
						registeredSkinName="commonui_scale9_button_green"/>
			</container>
		</container>
	</template>

	<!-- CONTENT -->
	<container name="root"
			   width="570" height="370" autoSizeWidth="false" autoSizeHeight="false"
			   mouseEnabled="false" mouseChilderen="true">
		<reference template="RETURNEE_LOGIN_CALENDAR"/>
	</container>
</root>